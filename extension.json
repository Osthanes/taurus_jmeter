{
    "id": "ibm.devops.services.pipeline.taurus",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Test",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "CONCURRENCY",
            "type": "Text",
            "required": "true",
            "default_value": "10",
            "label_key": "CONCURRENCY_KEY",
            "desc_key": "CONCURRENCY_DESC"
        },
        {
            "name": "RAMP_UP",
            "type": "Text",
            "required": "true",
            "default_value": "1m",
            "label_key": "RAMP_UPY_KEY",
            "desc_key": "RAMP_UP_DESC"
        },
        {
            "name": "DURATION",
            "type": "Text",
            "required": "true",
            "default_value": "1m30s",
            "label_key": "DURATION_KEY",
            "desc_key": "DURATION_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        },
        {
            "type": "Tests",
            "inclusion": "optional"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
set +x
set +e
export INIT_START_TIME=$(date +\"%s\")

export APP_NAME

. $EXT_DIR/_init.sh
INIT_END_TIME=$(date +\"%s\")
INIT_EST_TIME=$(($INIT_END_TIME-$INIT_START_TIME))
echo -e \"Init runtime of `date -u -d @\"$INIT_EST_TIME\" +\'%-Mm %-Ss\'`\"

APP_URL=$(cf app $APP_NAME | grep 'urls:' | awk '{print $2}' | cut -d '*' -f 2)
export APP_URL

pip install bzt

#${EXT_DIR}/run.py
bzt ${EXT_DIR}/test.yml
RESULT=$?

if [ $RESULT -ne 0 ]; then
    exit 1
fi

"
    }
    },
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "",
    "project_contact": "sppatel@us.ibm.com"
}
